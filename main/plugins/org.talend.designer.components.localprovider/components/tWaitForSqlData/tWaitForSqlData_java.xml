<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Orchestration</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER 
      NAME="WAIT" 
      FIELD="TEXT" 
      NUM_ROW="1"
      REQUIRED="true"
    >
      <DEFAULT>1</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="MAX_ITERATIONS" FIELD="TEXT" NUM_ROW="2">
      <DEFAULT></DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USE_EXISTING_CONNECTION"
      READONLY="true"
      FIELD="CHECK"
      NUM_ROW="3"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>


    <PARAMETER
      NAME="CONNECTION"
      FIELD="COMPONENT_LIST"
      FILTER="REGEXP:^(.)*(Connection)(.)*$"
      NUM_ROW="3"
      REQUIRED="true"
    />

    <PARAMETER 
      NAME="TABLE" 
      FIELD="TEXT" 
      NUM_ROW="4"
      REQUIRED="true"
    >
      <DEFAULT>"mytable"</DEFAULT>
    </PARAMETER>



    <PARAMETER
      NAME="OPERATOR"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="5"
    >
      <ITEMS DEFAULT="&gt;">
        <ITEM NAME="EQ"    VALUE="==" />
        <ITEM NAME="NEQ"   VALUE="!=" />
        <ITEM NAME="GT"    VALUE="&gt;"/>
        <ITEM NAME="LT"    VALUE="&lt;"/>
        <ITEM NAME="GE"    VALUE="&gt;="/>
        <ITEM NAME="LE"    VALUE="&lt;="/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER 
      NAME="VALUE" 
      FIELD="TEXT" 
      REQUIRED="true"
      NUM_ROW="5"
    >
      <DEFAULT>0</DEFAULT>
    </PARAMETER>


    <PARAMETER
      NAME="THEN"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="6"
    >
      <ITEMS DEFAULT="continue">
        <ITEM NAME="CONTINUE" VALUE="continue" />
        <ITEM NAME="EXIT_LOOP" VALUE="exitloop" />
      </ITEMS>
    </PARAMETER>
  </PARAMETERS>

  <ADVANCED_PARAMETERS>
    <PARAMETER
      NAME="ENABLE_WHERE_CLAUSE"
      FIELD="CHECK"
      NUM_ROW="1"
      SHOW_IF="ENABLE_SQL_STMT == 'false'"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>    
    
    <PARAMETER
      NAME="WHERE_CLAUSE"
      FIELD="MEMO_JAVA"
      NUM_ROW="10"
      NB_LINES="5"
      SHOW_IF="(ENABLE_WHERE_CLAUSE == 'true') and (ENABLE_SQL_STMT == 'false')"
    >
      <DEFAULT>"WHERE name='talend'"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ENABLE_SQL_STMT"
      FIELD="CHECK"
      NUM_ROW="11"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="SQL_STMT"
      FIELD="MEMO_JAVA"
      NUM_ROW="20"
      NB_LINES="5"
      SHOW_IF="ENABLE_SQL_STMT == 'true'"
    >
      <DEFAULT>"SELECT COUNT(*) FROM test WHERE name='talend'"</DEFAULT>
    </PARAMETER>      
  </ADVANCED_PARAMETERS>
  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="CURRENT_ITERATION" TYPE="id_Integer" AVAILABILITY="FLOW"/>
    <RETURN NAME="ROW_COUNT" TYPE="id_Integer" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>
