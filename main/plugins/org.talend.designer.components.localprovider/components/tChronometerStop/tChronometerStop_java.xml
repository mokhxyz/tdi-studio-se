<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Logs_Errors</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SINCE_BEGINNING"
      FIELD="RADIO"
      REQUIRED="true"
      NUM_ROW="1"
      CONTEXT="SINCE_GROUP"
      GROUP="SINCE"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="SINCE_STARTER"
      FIELD="RADIO"
      REQUIRED="true"
      NUM_ROW="2"
      CONTEXT="SINCE_GROUP"
      GROUP="SINCE"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="STARTER"
      FIELD="COMPONENT_LIST"
      FILTER="tChronometerStart"
	  REQUIRED="true"
      NUM_ROW="2"
      SHOW_IF="SINCE_STARTER == 'true'"
      GROUP="SINCE"
    />

    <PARAMETER
      NAME="DISPLAY"
      FIELD="CHECK"
      NUM_ROW="10"
      REQUIRED="true"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DISPLAY_COMPONENT_NAME"
      FIELD="CHECK"
      NUM_ROW="20"
      REQUIRED="true"
      SHOW_IF="DISPLAY == 'true'"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CAPTION"
      FIELD="TEXT"
      NUM_ROW="30"
      REQUIRED="false"
      SHOW_IF="DISPLAY == 'true'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DISPLAY_READABLE_DURATION"
      FIELD="CHECK"
      NUM_ROW="40"
      REQUIRED="true"
      SHOW_IF="DISPLAY == 'true'"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="STOPTIME" TYPE="Long" AVAILABILITY="FLOW"/>
    <RETURN NAME="DURATION" TYPE="Long" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>
