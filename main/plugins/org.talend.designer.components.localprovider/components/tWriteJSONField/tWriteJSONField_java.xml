<!-- $Id: tWriteJSONField.xml 2011-09-13 14:43:23 +0000 (星期二, 13 九月 2011) 
	jjzhou $ -->
<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA" 
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20110915A" STARTABLE="false"
		EXTENSION="org.talend.designer.fileoutputxml" SCHEMA_AUTO_PROPAGATE="false"
		DATA_AUTO_PROPAGATE="false" PARTITIONING="NONE">
		<SIGNATURE></SIGNATURE>
	</HEADER>

	<FAMILIES>
		<FAMILY>Processing/Fields</FAMILY>
	</FAMILIES>
	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1" MIN_INPUT="1" MIN_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER
	      NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true" NUM_ROW="50" REPOSITORY_VALUE="JSONOUTPUT"/>
	
		<PARAMETER NAME="JSONFIELD" FIELD="COLUMN_LIST" REQUIRED="true"
			NUM_ROW="1">
		</PARAMETER>

		<PARAMETER NAME="ROOT" FIELD="TABLE" REQUIRED="true"
			NUM_ROW="10" NB_LINES="3" SHOW="false" REPOSITORY_VALUE="ROOT">
			<ITEMS>
				<ITEM NAME="PATH" FIELD="TEXT" />
				<ITEM NAME="COLUMN" FIELD="TEXT" />
				<ITEM NAME="VALUE" FIELD="TEXT" />
				<ITEM NAME="ATTRIBUTE" FIELD="TEXT" />
				<ITEM NAME="ORDER" FIELD="TEXT" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="GROUP" FIELD="TABLE" REQUIRED="false"
			NUM_ROW="20" NB_LINES="5" SHOW="false" REPOSITORY_VALUE="GROUP">
			<ITEMS>
				<ITEM NAME="PATH" FIELD="TEXT" />
				<ITEM NAME="COLUMN" FIELD="TEXT" />
				<ITEM NAME="VALUE" FIELD="TEXT" />
				<ITEM NAME="ATTRIBUTE" FIELD="TEXT" />
				<ITEM NAME="ORDER" FIELD="TEXT" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="LOOP" FIELD="TABLE" REQUIRED="true"
			NUM_ROW="30" SHOW="false" REPOSITORY_VALUE="LOOP">
			<ITEMS>
				<ITEM NAME="PATH" FIELD="TEXT" />
				<ITEM NAME="COLUMN" FIELD="TEXT" />
				<ITEM NAME="VALUE" FIELD="TEXT" />
				<ITEM NAME="ATTRIBUTE" FIELD="TEXT" />
				<ITEM NAME="ORDER" FIELD="TEXT" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="MAP" FIELD="EXTERNAL" NUM_ROW="40">
			<DEFAULT />
		</PARAMETER>

		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
			NUM_ROW="60">
			<DEFAULT />
		</PARAMETER>

		<PARAMETER NAME="GROUPBYS" FIELD="TABLE" NUM_ROW="70"
			NB_LINES="3">
			<ITEMS>
				<ITEM NAME="OUTPUT_COLUMN" FIELD="COLUMN_LIST" />
				<ITEM NAME="INPUT_COLUMN" FIELD="PREV_COLUMN_LIST" />
			</ITEMS>
		</PARAMETER>
		<PARAMETER 
	        NAME="REMOVE_ROOT" 
	        FIELD="CHECK" 
	        NUM_ROW="80"
        >
            <DEFAULT>false</DEFAULT>
        </PARAMETER>
	</PARAMETERS>
	
	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="COMPACT_FORMAT" FIELD="CHECK" REQUIRED="true" NUM_ROW="10" SHOW="false">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<TEMPLATES INPUT="Out" OUTPUT="In">
			<TEMPLATE NAME="Out" COMPONENT="tWriteXMLFieldOut">
				<LINK_TO NAME="In" CTYPE="COMPONENT_OK" />
			</TEMPLATE>

			<TEMPLATE NAME="In" COMPONENT="tWriteJSONFieldIn" />

			<TEMPLATE_PARAM SOURCE="self.GROUPBYS" TARGET="Out.GROUPBYS" />
			<TEMPLATE_PARAM SOURCE="self.GROUPBYS" TARGET="In.GROUPBYS" />

			<TEMPLATE_PARAM SOURCE="self.ROOT" TARGET="Out.ROOT" />
			<TEMPLATE_PARAM SOURCE="self.GROUP" TARGET="Out.GROUP" />
			<TEMPLATE_PARAM SOURCE="self.LOOP" TARGET="Out.LOOP" />		
			<TEMPLATE_PARAM SOURCE="self.COMPACT_FORMAT" TARGET="Out.COMPACT_FORMAT" />		
			<TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="In.SCHEMA" />
			<TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="Out.SCHEMA" />
			
			<TEMPLATE_PARAM SOURCE="self.JSONFIELD" TARGET="In.JSONFIELD" />
			<TEMPLATE_PARAM SOURCE="self.JSONFIELD" TARGET="Out.JSONFIELD" />
			<TEMPLATE_PARAM SOURCE="self.REMOVE_ROOT" TARGET="In.REMOVE_ROOT" />
			<TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="In.DESTINATION" />
			<TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="Out.DESTINATION" />
			
		</TEMPLATES>
	</CODEGENERATION>


	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
	</RETURNS>
</COMPONENT>
