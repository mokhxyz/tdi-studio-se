<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Orchestration</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="FORLOOP"
      FIELD="RADIO"
      NUM_ROW="1"
      GROUP="LOOPTYPE"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="WHILELOOP"
      FIELD="RADIO"
      NUM_ROW="2"
      GROUP="LOOPTYPE"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="FROM" FIELD="TEXT" NUM_ROW="10" SHOW_IF="FORLOOP == 'true'">
      <DEFAULT>1</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="TO" FIELD="TEXT" NUM_ROW="20" SHOW_IF="FORLOOP == 'true'">
      <DEFAULT>10</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="STEP" FIELD="TEXT" NUM_ROW="30" SHOW_IF="FORLOOP == 'true'">
      <DEFAULT>1</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="INCREASE" FIELD="CHECK" NUM_ROW="40" SHOW_IF="FORLOOP == 'true'">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="DECLARATION" FIELD="TEXT" NUM_ROW="10" SHOW_IF="WHILELOOP == 'true'" RAW="true">
      <DEFAULT>int i=0</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="CONDITION" FIELD="TEXT" NUM_ROW="20" SHOW_IF="WHILELOOP == 'true'" RAW="true">
      <DEFAULT>i&lt;10</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="ITERATION" FIELD="TEXT" NUM_ROW="30" SHOW_IF="WHILELOOP == 'true'" RAW="true">
      <DEFAULT>i++</DEFAULT>
    </PARAMETER>
    
    
  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
  	<RETURN NAME="CURRENT_VALUE" TYPE="id_Integer" SHOW_IF="FORLOOP == 'true'" AVAILABILITY="FLOW"/>
    <RETURN NAME="CURRENT_ITERATION" TYPE="id_Integer" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>
