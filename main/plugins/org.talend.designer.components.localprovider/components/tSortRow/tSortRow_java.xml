<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20050320A"
		STARTABLE="false"
		PARTITIONING="CRITERIA.COLNAME"
		>
		<SIGNATURE />
	</HEADER>

  <FAMILIES>
    <FAMILY>Processing</FAMILY>
  </FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
    	<CONNECTOR CTYPE="FLOW" MIN_INPUT="1" MAX_INPUT="1" MIN_OUTPUT="1" MAX_OUTPUT="1"/>
    	<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    	<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    	<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
   		<CONNECTOR CTYPE="COMPONENT_OK"/>
    	<CONNECTOR CTYPE="COMPONENT_ERROR"/>
    	<CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
			NUM_ROW="10">
			<DEFAULT />
		</PARAMETER>

		<PARAMETER NAME="CRITERIA" FIELD="TABLE" REQUIRED="false"
			NUM_ROW="30" NB_LINES="3">
			<ITEMS>
				<ITEM NAME="COLNAME" FIELD="COLUMN_LIST" />

				<ITEM NAME="SORT" FIELD="CLOSED_LIST">
					<ITEMS DEFAULT="NUM">
						<ITEM NAME="NUM" VALUE="num" />
						<ITEM NAME="ALPHA" VALUE="alpha" />
						<ITEM NAME="DATE" VALUE="date" />
					</ITEMS>
				</ITEM>

				<ITEM NAME="ORDER" FIELD="CLOSED_LIST">
					<ITEMS DEFAULT="ASC">
						<ITEM NAME="ASC" VALUE="asc" />
						<ITEM NAME="DESC" VALUE="desc" />
					</ITEMS>
				</ITEM>
			</ITEMS>
		</PARAMETER>
	</PARAMETERS>
	
	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="EXTERNAL" FIELD="CHECK" REQUIRED="true"
			NUM_ROW="1">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="TEMPFILE" FIELD="DIRECTORY" NUM_ROW="2"
			REQUIRED="true" SHOW_IF="EXTERNAL == 'true'">
			<DEFAULT>"__COMP_DEFAULT_FILE_DIR__/temp"</DEFAULT>
		</PARAMETER>
		
        <PARAMETER NAME="CREATEDIR" FIELD="CHECK" REQUIRED="true" NUM_ROW="3" SHOW_IF="EXTERNAL == 'true'"> 
			<DEFAULT>true</DEFAULT> 
		</PARAMETER> 		
		
		<PARAMETER NAME="EXTERNAL_SORT_BUFFERSIZE" FIELD="TEXT" NUM_ROW="4"
			REQUIRED="true" SHOW_IF="EXTERNAL == 'true'">
			<DEFAULT>1000000</DEFAULT>
		</PARAMETER>		
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<TEMPLATES INPUT="SortOut" OUTPUT="SortIn">

			<TEMPLATE NAME="SortOut" COMPONENT="tSortOut">
				<LINK_TO NAME="SortIn" CTYPE="ROWS_END" />
			</TEMPLATE>

			<TEMPLATE NAME="SortIn" COMPONENT="tSortIn" />

			<TEMPLATE_PARAM SOURCE="self.CRITERIA"
				TARGET="SortOut.CRITERIA" />
			<TEMPLATE_PARAM SOURCE="self.EXTERNAL"
				TARGET="SortOut.EXTERNAL" />
			<TEMPLATE_PARAM SOURCE="self.EXTERNAL"
				TARGET="SortIn.EXTERNAL" />
			<TEMPLATE_PARAM SOURCE="self.TEMPFILE"
				TARGET="SortOut.TEMPFILE" />
            <TEMPLATE_PARAM SOURCE="self.CREATEDIR" 
 				TARGET="SortOut.CREATEDIR" /> 				
			<TEMPLATE_PARAM SOURCE="self.EXTERNAL_SORT_BUFFERSIZE"
				TARGET="SortOut.EXTERNAL_SORT_BUFFERSIZE" />
			<TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="SortIn.SCHEMA" />
			<TEMPLATE_PARAM SOURCE="self.SCHEMA"
				TARGET="SortOut.SCHEMA" />
			<TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME"
				TARGET="SortOut.DESTINATION" />
			<TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME"
				TARGET="SortIn.ORIGIN" />
		</TEMPLATES>
	</CODEGENERATION>
	<RETURNS />
</COMPONENT>