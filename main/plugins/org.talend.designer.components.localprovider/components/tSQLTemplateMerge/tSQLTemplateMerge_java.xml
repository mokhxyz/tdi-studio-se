			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tIngresConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='INGRES'" 
		/>
		
		<!-- Interbase -->
		<PARAMETER 
			NAME="CONNECTION_INTERBASE" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tInterbaseConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='INTERBASE'" 
		/>
		
		<!-- MSSQL -->
		<PARAMETER 
			NAME="CONNECTION_MSSQL" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tMSSqlConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='MSSQL'" 
		/>		
		
		<!-- Mysql -->
		<PARAMETER 
			NAME="CONNECTION_MYSQL" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tMysqlConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='MYSQL'" 
		/>		
		
		<!-- Oracle -->
		<PARAMETER 
			NAME="CONNECTION_DBORACLE" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tOracleConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='DBORACLE'" 
		/>		
		
		<!-- Paraccel -->
		<PARAMETER 
			NAME="CONNECTION_PARACCEL" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tParAccelConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='PARACCEL'" 
		/>		
		
		<!-- Postgreplus -->
		<PARAMETER 
			NAME="CONNECTION_POSTGREPLUS" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tPostgrePlusConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='POSTGREPLUS'" 
		/>		
		
		<!-- PostgreSQL -->
		<PARAMETER 
			NAME="CONNECTION_POSTGRE" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tPostgresqlConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='POSTGRE'" 
		/>
		
		<!-- SQLite -->
		<PARAMETER 
			NAME="CONNECTION_SQLITE" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tSQLiteConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='SQLITE'" 
		/>		
		
		<!-- Sybase -->
		<PARAMETER 
			NAME="CONNECTION_SYBASE" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tSybaseConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='SYBASE'" 
		/>		
		
		<!-- Teradata -->
		<PARAMETER 
			NAME="CONNECTION_TERADATA" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tTeradataConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='TERADATA'" 
		/>		
		
		<!-- Vertica -->
		<PARAMETER 
			NAME="CONNECTION_VERTICA" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="REGEXP:^tVerticaConnection|tJDBCConnection$" 
			NUM_ROW="2"
			SHOW_IF="DBTYPE=='VERTICA'" 
		/>	
		<!-- connections end -->	

		
		<PARAMETER 
			NAME="SOURCE_TABLE" 
			FIELD="TEXT" 
			NUM_ROW="10"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		
		
		<PARAMETER 
			NAME="SCHEMA" 
			FIELD="SCHEMA_TYPE" 
			NUM_ROW="10"
		>
			<DEFAULT>''</DEFAULT>
		</PARAMETER>
		
		
		<PARAMETER 
			NAME="TARGET_TABLE" 
			FIELD="TEXT" 
			NUM_ROW="20"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		
		
		<PARAMETER 
			NAME="SCHEMA_TARGET" 
			FIELD="SCHEMA_TYPE" 
			NUM_ROW="20"
			REQUIRED="true"
			CONTEXT="SCHEMA_TARGET"
		>
			<DEFAULT>''</DEFAULT>
		</PARAMETER>
		
		<PARAMETER
			NAME="MERGE_ON"
			FIELD="TABLE"
			NUM_ROW="40"
			NB_LINES="2"
		>
			<ITEMS>
				<ITEM NAME="TRG_COLUMN" FIELD="COLUMN_LIST" CONTEXT="SCHEMA_TARGET" />
				<ITEM NAME="SRC_COLUMN" FIELD="COLUMN_LIST" CONTEXT="SCHEMA" />
			</ITEMS>
		</PARAMETER>
		
		<PARAMETER
		  NAME="USE_UPDATE"
		  FIELD="CHECK"
		  REQUIRED="true"
		  NUM_ROW="50"
		>
			<DEFAULT>true</DEFAULT>
		</PARAMETER>
		
		
		<PARAMETER
			NAME="UPDATE_MAPPING"
			FIELD="TABLE"
			NUM_ROW="60"
			NB_LINES="2"
			SHOW_IF="USE_UPDATE == 'true'"
		>
			<ITEMS>
				<ITEM NAME="TRG_COLUMN" FIELD="COLUMN_LIST" CONTEXT="SCHEMA_TARGET" />
				<ITEM NAME="SRC_COLUMN" FIELD="COLUMN_LIST" CONTEXT="SCHEMA" />
			</ITEMS>
		</PARAMETER>
		
		<PARAMETER
		  NAME="SPECIFY_ADDITIONAL_UPDATE_COLUMNS"
		  FIELD="CHECK"
		  REQUIRED="true"
		  NUM_ROW="70"
		  SHOW_IF="USE_UPDATE == 'true'"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		
		<PARAMETER
			NAME="ADDITIONAL_UPDATE_COLUMNS"
			FIELD="TABLE"
			REQUIRED="false"
			NUM_ROW="71"
			NB_LINES="2"
			SHOW_IF="(USE_UPDATE == 'true') AND (SPECIFY_ADDITIONAL_UPDATE_COLUMNS == 'true')"
		>
			<ITEMS>
				<ITEM NAME="TRG_COLUMN_NAME" FIELD="TEXT" />
				<ITEM NAME="TRG_COLUMN_VALUE" FIELD="TEXT" />
			</ITEMS>
		</PARAMETER>
		
		<PARAMETER
		  NAME="SPECIFY_UPDATE_WHERE_CLAUSE"
		  FIELD="CHECK"
		  REQUIRED="true"
		  NUM_ROW="80"
		  SHOW_IF="USE_UPDATE == 'true'"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER
		  NAME="UPDATE_WHERE_CLAUSE"
		  FIELD="CODE"
		  REQUIRED="false"
		  NUM_ROW="81"
		  SHOW_IF="(USE_UPDATE == 'true') AND (SPECIFY_UPDATE_WHERE_CLAUSE == 'true')"
		>
			<DEFAULT>"target_table.id >= 100"</DEFAULT>
		</PARAMETER>
		<PARAMETER
		  NAME="NOTE_WHERE_UPDATE"
		  FIELD="LABEL"
		  NUM_ROW="80">
		  <DEFAULT> (Doesn't work with Oracle 9i)</DEFAULT>
		</PARAMETER>

		  
		
		
		<PARAMETER
		  NAME="USE_INSERT"
		  FIELD="CHECK"
		  REQUIRED="true"
		  NUM_ROW="100"
		>
			<DEFAULT>true</DEFAULT>
		</PARAMETER>
		
		
		<PARAMETER
			NAME="INSERT_MAPPING"
			FIELD="TABLE"
			NUM_ROW="110"
			NB_LINES="2"
			SHOW_IF="USE_INSERT == 'true'"
		>
			<ITEMS>
				<ITEM NAME="TRG_COLUMN" FIELD="COLUMN_LIST" CONTEXT="SCHEMA_TARGET" />
				<ITEM NAME="SRC_COLUMN" FIELD="COLUMN_LIST" CONTEXT="SCHEMA" />
			</ITEMS>
		</PARAMETER>
		
		<PARAMETER
		  NAME="SPECIFY_ADDITIONAL_INSERT_COLUMNS"
		  FIELD="CHECK"
		  REQUIRED="true"
		  NUM_ROW="120"
		  SHOW_IF="USE_INSERT == 'true'"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		
		<PARAMETER
			NAME="ADDITIONAL_INSERT_COLUMNS"
			FIELD="TABLE"
			REQUIRED="false"
			NUM_ROW="121"
			NB_LINES="2"
			SHOW_IF="(USE_INSERT == 'true') AND (SPECIFY_ADDITIONAL_INSERT_COLUMNS == 'true')"
		>
			<ITEMS>
				<ITEM NAME="TRG_COLUMN_NAME" FIELD="TEXT" />
				<ITEM NAME="TRG_COLUMN_VALUE" FIELD="TEXT" />
			</ITEMS>
		</PARAMETER>
		
		<PARAMETER
		  NAME="SPECIFY_INSERT_WHERE_CLAUSE"
		  FIELD="CHECK"
		  REQUIRED="true"
		  NUM_ROW="130"
		  SHOW_IF="USE_INSERT == 'true'"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER
		  NAME="INSERT_WHERE_CLAUSE"
		  FIELD="CODE"
		  REQUIRED="false"
		  NUM_ROW="131"
		  SHOW_IF="(USE_INSERT == 'true') AND (SPECIFY_INSERT_WHERE_CLAUSE == 'true')"
		>
			<DEFAULT>"source_table.id >= 100"</DEFAULT>
		</PARAMETER>
		<PARAMETER
		  NAME="NOTE_WHERE_UPDATE"
		  FIELD="LABEL"
		  NUM_ROW="130">
		  <DEFAULT> (Doesn't work with Oracle 9i)</DEFAULT>
		</PARAMETER>
		
		
