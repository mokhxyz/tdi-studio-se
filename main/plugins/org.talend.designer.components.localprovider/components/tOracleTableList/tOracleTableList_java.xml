<COMPONENT>
	<HEADER
	    PLATEFORM="ALL"
	    SERIAL=""
	    VERSION="0.101"
	    STATUS="ALPHA"
	    COMPATIBILITY="ALL"
	    AUTHOR="Talend"
	    RELEASE_DATE="20050320A"
	    STARTABLE="true"
	    LOG4J_ENABLED="true"
	>
    	<SIGNATURE />
	</HEADER>

  <FAMILIES>
    <FAMILY>Databases/Oracle</FAMILY>
  </FAMILIES>

	<DOCUMENTATION>
		<URL/>
	</DOCUMENTATION>

  	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="0" />
		<CONNECTOR CTYPE="ITERATE" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="COMPONENT_OK"/>
	    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
	    <CONNECTOR CTYPE="RUN_IF"/>
  	</CONNECTORS>

	<PARAMETERS>
		
		<!-- Oracle -->
		<PARAMETER 
			NAME="CONNECTION" 
			FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="tOracleConnection" 
			NUM_ROW="5"
			DYNAMIC_SETTINGS="true"
		/>
		
		<PARAMETER NAME="WHERE_CLAUSE" FIELD="TEXT" NUM_ROW="10" SHOW_IF="(FETCH_FROM=='USER_TABLES') OR (FETCH_FROM=='ALL_TABLES') OR (FETCH_FROM=='TAB')">
			<DEFAULT IF="(FETCH_FROM == 'TAB')">"TNAME not like '%$%'"</DEFAULT>
			<DEFAULT IF="(FETCH_FROM == 'USER_TABLES') OR (FETCH_FROM == 'ALL_TABLES')">"TABLE_NAME not like '%$%'"</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="QUERY" FIELD="TEXT" NUM_ROW="15" SHOW_IF="FETCH_FROM=='CUSTOM_QUERY'">
			<DEFAULT>"SELECT TABLE_NAME FROM USER_TABLES WHERE (TABLE_NAME not like '%$%') ORDER BY TABLE_NAME ASC"</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="FETCH_FROM" FIELD="CLOSED_LIST" NUM_ROW="20">
			<ITEMS DEFAULT="TAB">
				<ITEM NAME="TAB" VALUE="TAB" />
				<ITEM NAME="USER_TABLES" VALUE="USER_TABLES" />
				<ITEM NAME="ALL_TABLES" VALUE="ALL_TABLES" />
				<ITEM NAME="CUSTOM_QUERY" VALUE="CUSTOM_QUERY" />
			</ITEMS>
		</PARAMETER>
		
		<PARAMETER NAME="NOTE" FIELD="LABEL" NUM_ROW="30" SHOW_IF="FETCH_FROM=='TAB'">
			<DEFAULT>*Note: Table names are always in upper case. Example for the where clause: "TNAME not like '%$%' AND (TNAME like 'S%' OR TNAME='TALEND')"</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="NOTE1" FIELD="LABEL" NUM_ROW="30" SHOW_IF="(FETCH_FROM=='USER_TABLES') OR (FETCH_FROM=='ALL_TABLES')">
			<DEFAULT>*Note: Table names are always in upper case. Example for the where clause: "TABLE_NAME not like '%$%' AND (TABLE_NAME like 'S%' OR TABLE_NAME='TALEND')"</DEFAULT>
		</PARAMETER>
		
<!-- 
		<PARAMETER 
		  NAME="DATABASE_NAME" 
		  FIELD="TEXT" 
		  NUM_ROW="5"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		-->

	</PARAMETERS>
  
	<ADVANCED_PARAMETERS/>	

  	<CODEGENERATION/>

 	<RETURNS>
 		<RETURN NAME="CURRENT_TABLE" TYPE="id_String" AVAILABILITY="FLOW" />
		<RETURN NAME="NB_TABLE" TYPE="id_Integer" AVAILABILITY="AFTER" />
 	</RETURNS>
</COMPONENT>
