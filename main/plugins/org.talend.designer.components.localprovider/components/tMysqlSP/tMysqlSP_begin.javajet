    java.lang.Class.forName("<%=drverClass%>");
    <%dbLog.conn().logJDBCDriver(dbLog.str(drverClass));%>
    <%dbLog.conn().connTry(dbLog.var("connectionString"), dbLog.var("dbUser"));%>
    connection_<%=cid%> = java.sql.DriverManager.getConnection(connectionString_<%=cid%>, dbUser_<%=cid%>, dbPwd_<%=cid%>);
    <%dbLog.conn().connDone(dbLog.var("connectionString"));%>
    <%
