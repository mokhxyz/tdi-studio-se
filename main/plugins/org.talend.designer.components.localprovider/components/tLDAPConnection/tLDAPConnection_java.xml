<COMPONENT>

	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="1.2" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20100305A"
		STARTABLE="true" LOG4J_ENABLED="true">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>Databases/LDAP</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
	  <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="0"/>
	  <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
	  <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
	  <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
	  <CONNECTOR CTYPE="COMPONENT_OK"/>
	  <CONNECTOR CTYPE="COMPONENT_ERROR"/>
	  <CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE"
			SHOW="true" NUM_ROW="1" REPOSITORY_VALUE="LDAP"/>

		<PARAMETER NAME="HOST" FIELD="TEXT" NUM_ROW="2" REQUIRED="true"
			REPOSITORY_VALUE="HOST">
			<DEFAULT>"ldap.openldap.org"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="PORT" FIELD="TEXT" NUM_ROW="3" REQUIRED="true"
			REPOSITORY_VALUE="PORT">
			<DEFAULT>389</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="PROTOCOL" FIELD="CLOSED_LIST" NUM_ROW="5"
			REQUIRED="true" REPOSITORY_VALUE="PROTOCOL">
			<ITEMS DEFAULT="LDAP">
				<ITEM NAME="LDAP" VALUE="LDAP" />
				<ITEM NAME="LDAPS" VALUE="LDAPS" />
				<ITEM NAME="TLS" VALUE="TLS" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="BASEDN" FIELD="TEXT" NUM_ROW="6" REQUIRED="true"
			REPOSITORY_VALUE="BASEDN" >
			<DEFAULT>"dc=OpenLDAP,dc=org"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ADVANCEDCA" FIELD="CHECK" NUM_ROW="7"
			SHOW_IF="(PROTOCOL=='LDAPS' or PROTOCOL=='TLS')">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="STORECA" FIELD="FILE" NUM_ROW="8"
			SHOW_IF="(ADVANCEDCA=='true' and (PROTOCOL=='LDAPS' or PROTOCOL=='TLS') and ALWAYS_TRUST=='false')">
			<DEFAULT>"c:/mycacerts"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="STORECAPWD" FIELD="PASSWORD" NUM_ROW="8" 
				SHOW_IF="(ADVANCEDCA=='true' and (PROTOCOL=='LDAPS' or PROTOCOL=='TLS') and ALWAYS_TRUST=='false')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="ALWAYS_TRUST" FIELD="CHECK" NUM_ROW="8"
			SHOW_IF="(ADVANCEDCA=='true' and (PROTOCOL=='LDAPS' or PROTOCOL=='TLS'))">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="AUTHENTIFICATION" FIELD="CHECK" NUM_ROW="9"
			REPOSITORY_VALUE="AUTHENTIFICATION">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="USER" FIELD="TEXT" NUM_ROW="10"
			SHOW_IF="AUTHENTIFICATION == 'true'" REPOSITORY_VALUE="USER">
			<DEFAULT>"cn=Directory Manager"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="PASS" FIELD="PASSWORD" NUM_ROW="11"
			SHOW_IF="AUTHENTIFICATION == 'true'" REPOSITORY_VALUE="PASSWORD">
			<DEFAULT>"password"</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="ALIASES" FIELD="CLOSED_LIST" NUM_ROW="13"
			REPOSITORY_VALUE="ALIASES">
			<ITEMS DEFAULT="ALWAYS">
				<ITEM NAME="ALWAYS" VALUE="always" />
				<ITEM NAME="NEVER" VALUE="never" />
				<ITEM NAME="SEARCHING" VALUE="searching" />
				<ITEM NAME="FINDING" VALUE="finding" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="REFERRALS" FIELD="CLOSED_LIST" NUM_ROW="14"
			REPOSITORY_VALUE="REFERRALS">
			<ITEMS DEFAULT="IGNORE">
				<ITEM NAME="IGNORE" VALUE="ignore" />
				<ITEM NAME="FOLLOW" VALUE="follow" />
			</ITEMS>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
	</ADVANCED_PARAMETERS>
	
	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="ldap" MODULE="talendssl.jar" MVN="mvn:org.talend.libraries/talendssl/6.0.0"  REQUIRED="true" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
	</RETURNS>

</COMPONENT>
