<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20050320A"
		STARTABLE="false" PARTITIONING="NONE" LOG4J_ENABLED="true">
		<SIGNATURE></SIGNATURE>
	</HEADER>

  <FAMILIES>
    <FAMILY>File/Output</FAMILY>
    <FAMILY>XML</FAMILY>
  </FAMILIES>
	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>
	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="1"
			REQUIRED="true">
			<DEFAULT>"__COMP_DEFAULT_FILE_DIR__/out.xml"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="INPUT_IS_DOCUMENT" FIELD="CHECK" NUM_ROW="2" REQUIRED="true">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DOCUMENT_COL" FIELD="COLUMN_LIST" NUM_ROW="2" SHOW_IF="INPUT_IS_DOCUMENT=='true'"/>

		<PARAMETER NAME="ROW_TAG" FIELD="TEXT" REQUIRED="true"
			NUM_ROW="3" SHOW_IF="INPUT_IS_DOCUMENT=='false'">
			<DEFAULT>"row"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
			NUM_ROW="13">
			<DEFAULT />
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="SPLIT" FIELD="CHECK" REQUIRED="true"
			NUM_ROW="10" SHOW_IF="INPUT_IS_DOCUMENT=='false'">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SPLIT_EVERY" FIELD="TEXT" REQUIRED="true"
			NUM_ROW="10" SHOW_IF="SPLIT == 'true'">
			<DEFAULT>1000</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="CREATE" FIELD="CHECK" REQUIRED="true"
			NUM_ROW="20">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ROOT_TAGS" FIELD="TABLE" REQUIRED="false"
			NUM_ROW="30" NB_LINES="2" SHOW_IF="INPUT_IS_DOCUMENT=='false'">
			<ITEMS>
				<ITEM NAME="TAG" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="MAPPING" FIELD="TABLE" REQUIRED="true"
			NUM_ROW="35" NB_LINES="5" SHOW_IF="INPUT_IS_DOCUMENT=='false'">
			<ITEMS BASED_ON_SCHEMA="true">
				<ITEM NAME="AS_ATTRIBUTE" FIELD="CHECK" />
				<ITEM NAME="SCHEMA_COLUMN_NAME" FIELD="CHECK"
					VALUE="true" />
				<ITEM NAME="LABEL" VALUE="&quot;label&quot;" SHOW_IF="USE_DYNAMIC_GROUPING=='true'"/>
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="USE_DYNAMIC_GROUPING" FIELD="CHECK"
			REQUIRED="true" NUM_ROW="40" SHOW_IF="INPUT_IS_DOCUMENT=='false'">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="GROUP_BY" FIELD="TABLE" REQUIRED="false"
			NUM_ROW="45" NB_LINES="3" SHOW_IF="USE_DYNAMIC_GROUPING == 'true'">
			<ITEMS>
				<ITEM NAME="COLUMN" FIELD="COLUMN_LIST" />
				<ITEM NAME="LABEL" VALUE="name" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="FLUSHONROW" FIELD="CHECK" REQUIRED="true" SHOW_IF="INPUT_IS_DOCUMENT=='false'"
			NUM_ROW="50">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="FLUSHONROW_NUM" FIELD="TEXT" REQUIRED="true"
			NUM_ROW="55" SHOW_IF="FLUSHONROW == 'true'">
			<DEFAULT>1</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ADVANCED_SEPARATOR" FIELD="CHECK" REQUIRED="true" NUM_ROW="60" SHOW_IF="INPUT_IS_DOCUMENT=='false'" >
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="THOUSANDS_SEPARATOR" FIELD="TEXT" REQUIRED="true" NUM_ROW="65"
			SHOW_IF="(ADVANCED_SEPARATOR == 'true')">
			<DEFAULT>","</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DECIMAL_SEPARATOR" FIELD="TEXT" REQUIRED="true" NUM_ROW="70"
			SHOW_IF="(ADVANCED_SEPARATOR == 'true')">
			<DEFAULT>"."</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ENCODING" FIELD="ENCODING_TYPE" NUM_ROW="75"
			REQUIRED="true">
			<DEFAULT>"ISO-8859-15"</DEFAULT>
		</PARAMETER>

	  	<PARAMETER NAME="DELETE_EMPTYFILE" FIELD="CHECK" REQUIRED="true" NUM_ROW="80">
	      <DEFAULT>false</DEFAULT>
	    </PARAMETER>
	    
        <PARAMETER NAME="TRIM" FIELD="CHECK" REQUIRED="true"
            NUM_ROW="85" SHOW_IF="INPUT_IS_DOCUMENT=='true'">
            <DEFAULT>false</DEFAULT>
        </PARAMETER>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="dom4j-1_6" MODULE="dom4j-1.6.1.jar" MVN="mvn:org.talend.libraries/dom4j-1.6.1/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.dom4j-jaxen/lib/dom4j-1.6.1.jar" REQUIRED="true" BundleID="" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
	</RETURNS>
</COMPONENT>
