<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"

    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20070514A"
    STARTABLE="true"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Databases/JavaDB</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="1"
      REPOSITORY_VALUE="DATABASE:JAVADB"
    />

    <PARAMETER
      NAME="FRAMEWORK_TYPE"
      FIELD="CLOSED_LIST"
      NUM_ROW="2"
      REPOSITORY_VALUE="FRAMEWORK_TYPE"
    >
      <ITEMS DEFAULT="EMBEDED">
        <ITEM NAME="EMBEDED"    VALUE="EMBEDED" />
        <ITEM NAME="JCCJDBC"     VALUE="JCCJDBC"/>
        <ITEM NAME="DERBYCLIENT"     VALUE="DERBYCLIENT"/>
      </ITEMS>
    </PARAMETER>

	<PARAMETER
      NAME="TYPE"
      FIELD="TEXT"
      NUM_ROW="2"
      SHOW="false"
      REPOSITORY_VALUE="TYPE"
    >
      <DEFAULT>JavaDB</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CONNECTION_FLAG"
      FIELD="CHECK"
      NUM_ROW="2"
      NOT_SHOW_IF="FRAMEWORK_TYPE=='EMBEDED'"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
    	NAME="HOST"
    	FIELD="TEXT"
    	NUM_ROW="4"
    	REPOSITORY_VALUE="SERVER_NAME"
    	REQUIRED="true"
    	NOT_SHOW_IF="FRAMEWORK_TYPE=='EMBEDED'"
    >
    	<DEFAULT>"localhost"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="PORT"
      REQUIRED="true"
      NOT_SHOW_IF="FRAMEWORK_TYPE=='EMBEDED'"
    >
      <DEFAULT>"1527"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DB"
      FIELD="TEXT"
      NUM_ROW="5"
      REQUIRED="true"
      REPOSITORY_VALUE="SID"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DBPATH"
      FIELD="DIRECTORY"
      NUM_ROW="5"
      REQUIRED="true"
      SHOW_IF="FRAMEWORK_TYPE=='EMBEDED'"
      REPOSITORY_VALUE="DIRECTORY"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="6"
      REPOSITORY_VALUE="USERNAME"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PASS"
      FIELD="PASSWORD"
      NUM_ROW="6"
      REPOSITORY_VALUE="PASSWORD"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="7"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    <PARAMETER
      NAME="TABLE"
      FIELD="DBTABLE"
      NUM_ROW="8"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    <PARAMETER
      NAME="QUERYSTORE"
      FIELD="QUERYSTORE_TYPE"
      NUM_ROW="9"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

 	<PARAMETER
      NAME="GUESS_SCHEMA"
      FIELD="GUESS_SCHEMA"
      NUM_ROW="9"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="QUERY"
      FIELD="MEMO_SQL"
      NUM_ROW="10"
      REQUIRED="true"
    >
      <DEFAULT>"select id, name from employee"</DEFAULT>
    </PARAMETER>

   </PARAMETERS>

   <ADVANCED_PARAMETERS>
	<PARAMETER
      	NAME="ENCODING"
      	FIELD="ENCODING_TYPE"
      	NUM_ROW="11"
      	REQUIRED="true"
      	SHOW="false"
    >
      	<DEFAULT>"ISO-8859-15"</DEFAULT>
	</PARAMETER>

	<PARAMETER NAME="TRIM_ALL_COLUMN" FIELD="CHECK" NUM_ROW="30">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>

	<PARAMETER NAME="TRIM_COLUMN" FIELD="TABLE" NUM_ROW="40"
		NB_LINES="5" SHOW_IF="TRIM_ALL_COLUMN == 'false'">
		<ITEMS BASED_ON_SCHEMA="true">
			<ITEM NAME="TRIM" FIELD="CHECK"></ITEM>
		</ITEMS>
	</PARAMETER>
   </ADVANCED_PARAMETERS>

   <CODEGENERATION>
     <IMPORTS>
       <IMPORT NAME="Driver-JavaDB" MODULE="derby.jar" MVN="mvn:org.talend.libraries/derby/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.jdbc.derby/lib/derby.jar" REQUIRED="true" />
       <IMPORT NAME="Driver-JavaDB" MODULE="derbyclient.jar" MVN="mvn:org.talend.libraries/derbyclient/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.jdbc.derby/lib/derbyclient.jar" REQUIRED="true" />
       <IMPORT NAME="Driver-JavaDB" MODULE="derbynet.jar" MVN="mvn:org.talend.libraries/derbynet/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.jdbc.derby/lib/derbynet.jar" REQUIRED="true"/>
     </IMPORTS>
   </CODEGENERATION>

   <RETURNS>
      <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
      <RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW"/>
   </RETURNS>
</COMPONENT>
