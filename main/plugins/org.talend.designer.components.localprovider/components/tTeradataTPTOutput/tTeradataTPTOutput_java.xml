<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
    VISIBLE="false"
    TECHNICAL="true"
    PARTITIONING="NONE"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <FAMILIES>
    <FAMILY>Technical</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true" NUM_ROW="1" REPOSITORY_VALUE="DELIMITED" GROUP="DATA_FILE"/>

    <PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="2" REQUIRED="true" REPOSITORY_VALUE="FILE_PATH" GROUP="DATA_FILE">
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/out.csv"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="APPEND" FIELD="CHECK" REQUIRED="true" NUM_ROW="3" REPOSITORY_VALUE="APPEND" GROUP="DATA_FILE">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="5" GROUP="DATA_FILE">
      <DEFAULT/> 
    </PARAMETER>
   </PARAMETERS>
   
   <ADVANCED_PARAMETERS>
   	<PARAMETER NAME="ROWSEPARATOR" FIELD="TEXT" NUM_ROW="3" REPOSITORY_VALUE="ROW_SEPARATOR" GROUP="DATA_FILE">
      <DEFAULT>"\n"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="FIELDSEPARATOR" FIELD="TEXT" NUM_ROW="3" REPOSITORY_VALUE="FIELD_SEPARATOR" GROUP="DATA_FILE">
      <DEFAULT>";"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="INCLUDEHEADER" FIELD="CHECK" NUM_ROW="4" GROUP="DATA_FILE">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="ENCODING" FIELD="ENCODING_TYPE" NUM_ROW="6" REQUIRED="true" REPOSITORY_VALUE="ENCODING" GROUP="DATA_FILE">
      <DEFAULT>"ISO-8859-15"</DEFAULT>
    </PARAMETER>
   </ADVANCED_PARAMETERS>

   <CODEGENERATION/>

   <RETURNS>
     <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
   </RETURNS>
</COMPONENT>
