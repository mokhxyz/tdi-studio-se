<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20070806A"
    STARTABLE="false"
    DATA_AUTO_PROPAGATE="false"
    HAS_CONDITIONAL_OUTPUTS="true"
    PARTITIONING="AUTO"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE/>
  </HEADER>
  
  <FAMILIES>
    <FAMILY>Databases/Sas</FAMILY>
  </FAMILIES>
  
  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR NAME="REJECT" CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1" LINE_STYLE="2" COLOR="FF0000" BASE_SCHEMA="FLOW" 
    			 NOT_SHOW_IF="(DIE_ON_ERROR == 'true')"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
  
   	<PARAMETER
    	NAME="NOTE"
    	FIELD="LABEL"
    	NUM_ROW="1"
    >
    	<DEFAULT>(To use this component, you need first to add these SAS Java packages (sas.core.jar, sas.security.sspi.jar, sas.svc.connection.jar) in the Modules view)</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="false"
      NUM_ROW="2"
      REPOSITORY_VALUE="DATABASE:SAS"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    />
    
    <PARAMETER
      NAME="USE_EXISTING_CONNECTION"
      FIELD="CHECK"
      NUM_ROW="3"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>    

    <PARAMETER
      NAME="CONNECTION"
      FIELD="COMPONENT_LIST"
      REQUIRED="true" FILTER="tJDBCConnection"
      NUM_ROW="3"
      SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
    />
	
    <PARAMETER
      NAME="URL"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="URL"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>"jdbc:"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="ENABLE_LIBREFS"
      FIELD="CHECK"
      NUM_ROW="4"
      REQUIRED="true"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="DBNAME"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="SCHEMA"
      REQUIRED="true"
      SHOW_IF="ENABLE_LIBREFS == 'true'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="DRIVER_JAR"
      FIELD="MODULE_LIST"
      NUM_ROW="5"
      REPOSITORY_VALUE="DRIVER_JAR"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT></DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="DRIVER_CLASS"
      FIELD="TEXT"
      NUM_ROW="6"
      REPOSITORY_VALUE="DRIVER_CLASS"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="7"
      REPOSITORY_VALUE="USERNAME"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PASS"
      FIELD="PASSWORD"
      NUM_ROW="7"
      REPOSITORY_VALUE="PASSWORD"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="TABLE"
      FIELD="TEXT"
      NUM_ROW="8"
      REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>   

    <PARAMETER
      NAME="DATA_ACTION"
      FIELD="CLOSED_LIST"
      NUM_ROW="9"
    >
      <ITEMS DEFAULT="INSERT">
        <ITEM NAME="INSERT"           VALUE="INSERT" />
        <ITEM NAME="UPDATE"           VALUE="UPDATE"/>
        <ITEM NAME="INSERT_OR_UPDATE" VALUE="INSERT_OR_UPDATE"/>
        <ITEM NAME="UPDATE_OR_INSERT" VALUE="UPDATE_OR_INSERT"/>
        <ITEM NAME="DELETE"           VALUE="DELETE"/>
      </ITEMS>
    </PARAMETER>
    
    <PARAMETER
      NAME="CLEAR_TABLE"
      FIELD="CHECK"
      NUM_ROW="9"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>     

    <PARAMETER
      NAME="SCHEMA_FLOW"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="10"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="SCHEMA_REJECT"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="10"
      CONTEXT="REJECT"
      SHOW="true">
      <TABLE READONLY="true">
        <COLUMN NAME="errorCode" TYPE="id_String" LENGTH="255" READONLY="false" CUSTOM="true"/>
        <COLUMN NAME="errorMessage" TYPE="id_String" LENGTH="255" READONLY="false" CUSTOM="true"/>
      </TABLE>
    </PARAMETER>
    
    <PARAMETER
      NAME="DIE_ON_ERROR"
      FIELD="CHECK"
      NUM_ROW="11"
    >
      <DEFAULT>false</DEFAULT>
	</PARAMETER>
	<PARAMETER
      NAME="TYPE"
      FIELD="TEXT"
      NUM_ROW="4"
      SHOW="false"
      REPOSITORY_VALUE="TYPE"
    >
      <DEFAULT>SAS</DEFAULT>
    </PARAMETER>
  </PARAMETERS>
  
  <ADVANCED_PARAMETERS>
  	
  	<PARAMETER
       NAME="JDBC_PARAMETERS"
       FIELD="TABLE"
       NUM_ROW="1"
     >
       <ITEMS>
         <ITEM NAME="KEY"/>
         <ITEM NAME="VALUE"/>
       </ITEMS>
     </PARAMETER>
  
  	<PARAMETER
      NAME="ENCODING"
      FIELD="ENCODING_TYPE"
      NUM_ROW="10"
      REQUIRED="true"
      SHOW="false"
      >
       <DEFAULT>"ISO-8859-15"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="COMMIT_EVERY"
      FIELD="TEXT"
      NUM_ROW="10"
      REQUIRED="true"
	  SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>10000</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ADD_COLS"
      FIELD="TABLE"
      REQUIRED="false"
      NOT_SHOW_IF="(ACTION=='DROP_CREATE_TABLE' or ACTION=='CREATE_TABLE')"
      NUM_ROW="11"
      NB_LINES="3"
    >
      <ITEMS>
        <ITEM NAME="NAME" VALUE='"colname"' />
        <ITEM NAME="SQL" VALUE='"now()"' />
        <ITEM NAME="POS" FIELD="CLOSED_LIST">
          <ITEMS DEFAULT="BEFORE">
            <ITEM NAME="BEFORE" VALUE="BEFORE"/>
            <ITEM NAME="AFTER" VALUE="AFTER"/>
            <ITEM NAME="REPLACE" VALUE="REPLACE"/>
          </ITEMS>
        </ITEM>
        <ITEM NAME="REFCOL" FIELD="COLUMN_LIST" />
      </ITEMS>
    </PARAMETER>
    
    <PARAMETER
      NAME="USE_FIELD_OPTIONS"
      FIELD="CHECK"
      NUM_ROW="13"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FIELD_OPTIONS"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="14"
      NB_LINES="5"
      SHOW_IF="USE_FIELD_OPTIONS == 'true'"
    >
      <ITEMS BASED_ON_SCHEMA="true">
        <ITEM NAME="UPDATE_KEY" VALUE="false" FIELD="CHECK" />
        <ITEM NAME="DELETE_KEY" VALUE="false" FIELD="CHECK" />
        <ITEM NAME="UPDATABLE"  VALUE="true"  FIELD="CHECK" />
        <ITEM NAME="INSERTABLE" VALUE="true"  FIELD="CHECK" />
      </ITEMS>
    </PARAMETER>
    
  	<PARAMETER 
  	  NAME="ENABLE_DEBUG_MODE" 
  	  FIELD="CHECK"
	  NUM_ROW="16">
	  <DEFAULT>false</DEFAULT>
	</PARAMETER>    
  </ADVANCED_PARAMETERS>

   <CODEGENERATION>
     <IMPORTS>
		<IMPORT NAME="Driver-SAS" MODULE="sas.core.jar" MVN="mvn:org.talend.libraries/sas.core/6.0.0"  REQUIRED="true" />
		<IMPORT NAME="Driver-SAS" MODULE="sas.svc.connection.jar" MVN="mvn:org.talend.libraries/sas.svc.connection/6.0.0"  REQUIRED="true" />
		<IMPORT NAME="Driver-SAS" MODULE="sas.security.sspi.jar" MVN="mvn:org.talend.libraries/sas.security.sspi/6.0.0"  REQUIRED="true" />
     </IMPORTS>
   </CODEGENERATION>
   
  <RETURNS>
    <RETURN NAME="NB_LINE"          TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="NB_LINE_UPDATED"  TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="NB_LINE_INSERTED" TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="NB_LINE_DELETED"  TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="NB_LINE_REJECTED" TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW" SHOW_IF="ENABLE_DEBUG_MODE=='true'"/>
  </RETURNS>
</COMPONENT>
