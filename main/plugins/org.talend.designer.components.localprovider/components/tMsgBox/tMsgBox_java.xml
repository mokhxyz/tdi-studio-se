<!-- $Id: tMsgBox_perl.xml 1528 2007-01-19 17:03:36Z smallet $ -->
<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20050320A"
		STARTABLE="true" PARTITIONING="AUTO">
		<SIGNATURE></SIGNATURE>
	</HEADER>

  <FAMILIES>
    <FAMILY>Misc</FAMILY>
  </FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="TITLE" FIELD="TEXT" REQUIRED="false"
			NUM_ROW="1">
			<DEFAULT>"Talend Open Studio"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="BUTTONS" FIELD="CLOSED_LIST" REQUIRED="false"
			NUM_ROW="2">
			<ITEMS DEFAULT="0">
				<ITEM NAME="OK" VALUE="0" />
				<ITEM NAME="OK_ABORT" VALUE="1" />
				<ITEM NAME="ABORT_RETRY_IGNORE" VALUE="2" />
				<ITEM NAME="YES_NO_CANCEL" VALUE="3" />
				<ITEM NAME="YES_NO" VALUE="4" />
				<ITEM NAME="RETRY_CANCEL" VALUE="5" />
				<ITEM NAME="QUESTION" VALUE="6" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="ICON" FIELD="CLOSED_LIST" REQUIRED="false"
			NUM_ROW="3">
			<ITEMS DEFAULT="INFORMATION_MESSAGE">
				<ITEM NAME="MB_ICONSTOP" VALUE="ERROR_MESSAGE" />
				<ITEM NAME="MB_ICONQUESTION" VALUE="QUESTION_MESSAGE" />
				<ITEM NAME="MB_ICONEXCLAMATION" VALUE="WARNING_MESSAGE" />
				<ITEM NAME="MB_ICONINFORMATION"
					VALUE="INFORMATION_MESSAGE" />
			</ITEMS>
		</PARAMETER>
		<PARAMETER
		  NAME="ANSWER_MASK"
		  FIELD="CHECK" 
		  NUM_ROW="2"
		  REQUIRED="true"
		  SHOW_IF="BUTTONS=='QUESTION'"
		  />
		  
		<!-- <PARAMETER
		  NAME="QUESTION_TITLE"
		  FIELD="TEXT" 
		  NUM_ROW="4"
		  REQUIRED="true"
		  SHOW_IF="BUTTONS=='QUESTION'"
		  >
		  <DEFAULT>"Window Title"</DEFAULT>
		  </PARAMETER>
		 -->
		 <PARAMETER
		  NAME="QUESTION_LABEL"
		  FIELD="MEMO" 
		  NUM_ROW="5"
		  REQUIRED="true"
		  SHOW_IF="BUTTONS=='QUESTION'"
		  >
		  <DEFAULT>"Question ?"</DEFAULT>
		  </PARAMETER>
		  
		  <PARAMETER NAME="MESSAGE" FIELD="MEMO" REQUIRED="false"
			NUM_ROW="4" SHOW_IF="BUTTONS!='QUESTION'">
			<DEFAULT>"Hello world!"</DEFAULT>
		</PARAMETER>
	</PARAMETERS>

	
   <CODEGENERATION/>

  <RETURNS>
      <RETURN NAME="RESULT" TYPE="id_String" AVAILABILITY="AFTER" />
      
  </RETURNS>

</COMPONENT>
