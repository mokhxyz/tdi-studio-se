<!-- $Id: tExternalSortOutput.xml,v 1.12 2006/10/24 04:51:23 nrousseau Exp $ -->
<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    VISIBLE="true"
	PARTITIONING="CRITERIA.COLNAME"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>File/Output</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="10"
    >
      <DEFAULT/> 
    </PARAMETER>

    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="20"
      REQUIRED="true"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/sorted.txt"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FIELDSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="30"
    >
      <DEFAULT>";"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CRITERIA"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="40"
      NB_LINES="3"
    >
      <ITEMS>
        <ITEM NAME="COLNAME" FIELD="COLUMN_LIST"/>

        <ITEM NAME="SORT" FIELD="CLOSED_LIST">
          <ITEMS DEFAULT="NUM">
            <ITEM NAME="NUM" VALUE="num"/>
            <ITEM NAME="ALPHA" VALUE="alpha"/>
          </ITEMS>
        </ITEM>

        <ITEM NAME="ORDER" FIELD="CLOSED_LIST">
          <ITEMS DEFAULT="ASC">
            <ITEM NAME="ASC" VALUE="asc"/>
            <ITEM NAME="DESC" VALUE="desc"/>
          </ITEMS>
        </ITEM>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="MAX_MEMORY"
      FIELD="TEXT"
      NUM_ROW="50"
    >
      <DEFAULT>"200M"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TEMP_DIR"
      FIELD="DIRECTORY"
      NUM_ROW="60"
    >
      <DEFAULT></DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="SET_INPUT_TEMP_DIR"
      FIELD="CHECK"
      NUM_ROW="61"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    <PARAMETER
      NAME="INPUT_TEMP_DIR"
      FIELD="DIRECTORY"
      NUM_ROW="61"
      SHOW_IF="SET_INPUT_TEMP_DIR == 'true'"
    >
      <DEFAULT></DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="SORT_CMDPATH"
      FIELD="FILE"
      NUM_ROW="70"
    >
      <DEFAULT></DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="ADD_EOF"
      FIELD="CHECK"
      NUM_ROW="80"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="CREATE"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="80"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
   </RETURNS>
</COMPONENT>