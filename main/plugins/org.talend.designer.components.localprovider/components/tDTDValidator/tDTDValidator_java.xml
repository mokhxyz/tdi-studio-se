<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    SCHEMA_AUTO_PROPAGATE="false"
	PARTITIONING="AUTO"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <FAMILIES>
    <FAMILY>XML</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      READONLY="true" 
      REQUIRED="true"
      NUM_ROW="1"
     
    >
      <TABLE READONLY="true">
        <COLUMN NAME="dtdfile" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="xmlfile" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="moment" TYPE="id_Date" PATTERN='"yyyy-MM-dd HH:mm:ss"'/>
        <COLUMN NAME="job" TYPE="id_String" LENGTH="50" />
        <COLUMN NAME="component" TYPE="id_String" LENGTH="255" />
        <COLUMN NAME="validate" TYPE="id_Integer" LENGTH="1" />
        <COLUMN NAME="message" TYPE="id_String" LENGTH="255" />
      </TABLE>
    </PARAMETER>

    <PARAMETER
       NAME="DTDFILE"
       FIELD="FILE"
       REQUIRED="true"
       NUM_ROW="10"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/need_test.dtd"</DEFAULT>
    </PARAMETER>

    <PARAMETER
       NAME="XMLFILE"
       FIELD="FILE"
       REQUIRED="true"
       NUM_ROW="20"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/reference.xml"</DEFAULT>
    </PARAMETER>

    <PARAMETER
       NAME="VALID_MESSAGE"
       FIELD="TEXT"
       REQUIRED="true"
       NUM_ROW="30"
    >
      <DEFAULT>"[job " + jobName + "] File is Valid"</DEFAULT>
    </PARAMETER>

    <PARAMETER
       NAME="INVALID_MESSAGE"
       FIELD="TEXT"
       REQUIRED="true"
       NUM_ROW="40"
    >
      <DEFAULT>"[job " + jobName + "] File is Invalid"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PRINT"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="50"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="DIFFERENCE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="VALID" TYPE="id_Boolean" AVAILABILITY="FLOW" />
  </RETURNS>

</COMPONENT>