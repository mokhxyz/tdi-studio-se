<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20070326A"
    STARTABLE="true"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE/>
  </HEADER>
  
  <FAMILIES>
    <FAMILY>Databases/Sas</FAMILY>
  </FAMILIES>
  
  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
  
  	<PARAMETER
    	NAME="NOTE"
    	FIELD="LABEL"
    	NUM_ROW="1"
    >
    	<DEFAULT>(To use this component, you need first to add these SAS Java packages (sas.core.jar, sas.security.sspi.jar, sas.svc.connection.jar) in the Modules view)</DEFAULT>
    </PARAMETER>
    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="2"
      REPOSITORY_VALUE="DATABASE:SAS"
    />

    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="SERVER_NAME"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

	<PARAMETER
      NAME="TYPE"
      FIELD="TEXT"
      NUM_ROW="4"
      SHOW="false"
      REPOSITORY_VALUE="TYPE"
    >
      <DEFAULT>SAS</DEFAULT>
    </PARAMETER>
    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="PORT"
    >
      <DEFAULT>"8591"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ENABLE_LIBREFS"
      FIELD="CHECK"
      NUM_ROW="3"
      REQUIRED="true"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DBNAME"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="SCHEMA"
      REQUIRED="true"
      SHOW_IF="ENABLE_LIBREFS == 'true'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="USERNAME"
      REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PASS"
      FIELD="PASSWORD"
      NUM_ROW="4"
      REPOSITORY_VALUE="PASSWORD"
      REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="5"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="DBTABLE"
      FIELD="DBTABLE"
      NUM_ROW="6"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="QUERYSTORE"
      FIELD="QUERYSTORE_TYPE"
      NUM_ROW="7"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="QUERY"
      FIELD="MEMO_SQL"
      NUM_ROW="8"
      REQUIRED="true"
    >
      <DEFAULT>"select * from sysobjects "</DEFAULT>
    </PARAMETER>
    
   </PARAMETERS>
   
   <ADVANCED_PARAMETERS>
     <PARAMETER
       NAME="JDBC_PARAMETERS"
       FIELD="TABLE"
       NUM_ROW="1"
     >
       <ITEMS>
         <ITEM NAME="KEY"/>
         <ITEM NAME="VALUE"/>
       </ITEMS>
     </PARAMETER>
   </ADVANCED_PARAMETERS>
   
   <CODEGENERATION>
     <IMPORTS>
		<IMPORT NAME="Driver-SAS" MODULE="sas.core.jar" MVN="mvn:org.talend.libraries/sas.core/6.0.0"  REQUIRED="true" />
		<IMPORT NAME="Driver-SAS" MODULE="sas.svc.connection.jar" MVN="mvn:org.talend.libraries/sas.svc.connection/6.0.0"  REQUIRED="true" />
		<IMPORT NAME="Driver-SAS" MODULE="sas.security.sspi.jar" MVN="mvn:org.talend.libraries/sas.security.sspi/6.0.0"  REQUIRED="true" />
     </IMPORTS>
   </CODEGENERATION>

   <RETURNS>
      <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
      <RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW"/>
   </RETURNS>
</COMPONENT>
