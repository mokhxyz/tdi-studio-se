<!-- $Id: tLogCatcher_perl.xml 1878 2007-02-06 17:19:25Z plegall $ -->
<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
       SERIAL=""
      VERSION="0.101"
       STATUS="ALPHA"
         
COMPATIBILITY="ALL"
       AUTHOR="Talend"
 RELEASE_DATE="20050320A"
    STARTABLE="true"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <FAMILIES>
    <FAMILY>Logs_Errors</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" READONLY="true" REQUIRED="true" NUM_ROW="1" >
      <TABLE READONLY="true">
        <COLUMN NAME="moment" TYPE="id_Date" PATTERN='"yyyy-MM-dd HH:mm:ss"'/>
        <COLUMN NAME="pid" TYPE="id_String" LENGTH="20"/>
        <COLUMN NAME="root_pid" TYPE="id_String" LENGTH="20"/>
        <COLUMN NAME="father_pid" TYPE="id_String" LENGTH="20"/>
        <COLUMN NAME="project" TYPE="id_String" LENGTH="50"/>
        <COLUMN NAME="job" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="context" TYPE="id_String" LENGTH="50"/>
        <COLUMN NAME="priority" TYPE="id_Integer" LENGTH="3"/>
        <COLUMN NAME="type" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="origin" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="message" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="code" TYPE="id_Integer" LENGTH="3"/>
      </TABLE>
    </PARAMETER>

    <PARAMETER NAME="CATCH_JAVA_EXCEPTION" FIELD="CHECK" REQUIRED="true" NUM_ROW="2" REPOSITORY_VALUE="CATCH_JAVA_EXCEPTION">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CATCH_TDIE" FIELD="CHECK" REQUIRED="true" NUM_ROW="2" REPOSITORY_VALUE="CATCH_TDIE">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CATCH_TWARN" FIELD="CHECK" REQUIRED="true" NUM_ROW="2" REPOSITORY_VALUE="CATCH_TWARN">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="CATCH_TACTIONFAILURE" FIELD="CHECK" REQUIRED="true" NUM_ROW="2" REPOSITORY_VALUE="CATCH_TACTIONFAILURE" SHOW_IF="IS_STUDIO_IPAAS_VERSION == 'true'">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    
   </PARAMETERS>

   <CODEGENERATION/>

   <RETURNS/>

</COMPONENT>
