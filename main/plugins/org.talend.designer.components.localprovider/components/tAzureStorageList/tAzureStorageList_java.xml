<COMPONENT>

	<HEADER
	    PLATEFORM="ALL"
	    SERIAL=""
	    VERSION="0.102"
	    STATUS="ALPHA"
	
	    COMPATIBILITY="ALL"
	    AUTHOR="Talend"
	    RELEASE_DATE="20130903A"
	    STARTABLE="true"
	    LOG4J_ENABLED="true"
  	>
    	<SIGNATURE/>
  	</HEADER>

  	<FAMILIES>
    	<FAMILY>Cloud/Azure Storage</FAMILY>
  	</FAMILIES>

  	<DOCUMENTATION>
    	<URL/>
  	</DOCUMENTATION>

  	<CONNECTORS>
	    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="0"/>
	    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
	    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
	    <CONNECTOR CTYPE="COMPONENT_OK"/>
	    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
	    <CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER 
			NAME="USE_EXISTING_CONNECTION" 
			FIELD="CHECK"
			NUM_ROW="5"  
			GROUP="CONNECTION"
	   	>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
    
		<PARAMETER 
			NAME="CONNECTION" 
			FIELD="COMPONENT_LIST" 
			REQUIRED="true" FILTER="tAzureStorageConnection"
			NUM_ROW="5" 
			SHOW_IF="USE_EXISTING_CONNECTION == 'true'" 
			GROUP="CONNECTION"
		/>
		<PARAMETER
			NAME="ACCESS_KEY"
			FIELD="TEXT"
			NUM_ROW="20"
			REQUIRED="true"
			GROUP="CONNECTION"
			SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="SECRET_KEY"
			FIELD="TEXT"
			NUM_ROW="20"
			REQUIRED="true"
			GROUP="CONNECTION"
			SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
	
		<PARAMETER NAME="PROTOCOL" FIELD="CLOSED_LIST" REQUIRED="true"
			NUM_ROW="30" GROUP="CONNECTION" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<ITEMS DEFAULT="HTTP">
				<ITEM NAME="HTTP" VALUE="HTTP" />
				<ITEM NAME="HTTPS" VALUE="HTTPS"/>
			</ITEMS>
		</PARAMETER>
		
		<PARAMETER
			NAME="CONTAINER"
			FIELD="TEXT"
			NUM_ROW="40"
			REQUIRED="true"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER
			NAME="REMOTE_BLOBS"
			FIELD="TABLE"
			NUM_ROW="50"
			REQUIRED="true"
		>
			<ITEMS>
				<ITEM NAME="PREFIX" VALUE="&quot;&quot;" />
				<ITEM NAME="INCLUDE" FIELD="CHECK" VALUE="false" />
			</ITEMS>
		</PARAMETER>
		
		<PARAMETER
			NAME="DIE_ON_ERROR"
			FIELD="CHECK"
			NUM_ROW="60"
		>
			<DEFAULT>true</DEFAULT>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS/>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="microsoft-windowsazure-api-0.4.6" MODULE="microsoft-windowsazure-api-0.4.6.jar" MVN="mvn:org.talend.libraries/microsoft-windowsazure-api-0.4.6/6.0.0"  REQUIRED="true" />
		</IMPORTS>
	</CODEGENERATION>

   	<RETURNS>
		<RETURN NAME="ACCOUNT_NAME" TYPE="id_String" AVAILABILITY="AFTER" SHOW_IF="USE_EXISTING_CONNECTION == 'false'"/>
		<RETURN NAME="ACCOUNT_KEY" TYPE="id_String" AVAILABILITY="AFTER" SHOW_IF="USE_EXISTING_CONNECTION == 'false'"/>
		<RETURN NAME="CONTAINER" TYPE="id_String" AVAILABILITY="AFTER"/>
		<RETURN NAME="CURRENT_BLOB" TYPE="id_String" AVAILABILITY="AFTER"/>
	</RETURNS>
   	
</COMPONENT>
