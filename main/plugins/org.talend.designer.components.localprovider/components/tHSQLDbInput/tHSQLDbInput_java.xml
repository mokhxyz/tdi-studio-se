<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"

    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20070326A"
    STARTABLE="true"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Databases/HSQLDb</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="1"
      REPOSITORY_VALUE="DATABASE:HSQLDB"
    />

    <PARAMETER
      NAME="RUNNING_MODE"
      FIELD="CLOSED_LIST"
      NUM_ROW="2"
      REPOSITORY_VALUE="RUNNING_MODE"
    >
      <ITEMS DEFAULT="HSQLDB_SERVER">
        <ITEM NAME="HSQLDB_SERVER" VALUE="HSQLDB_SERVER" />
        <ITEM NAME="HSQLDB_WEBSERVER" VALUE="HSQLDB_WEBSERVER"/>
        <ITEM NAME="HSQLDB_INPROGRESS_PERSISTENT" VALUE="HSQLDB_INPROGRESS_PERSISTENT"/>
        <ITEM NAME="HSQLDB_IN_MEMORY" VALUE="HSQLDB_IN_MEMORY"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="TLS"
      FIELD="CHECK"
      NUM_ROW="2"
      SHOW_IF="(RUNNING_MODE=='HSQLDB_SERVER' or RUNNING_MODE=='HSQLDB_WEBSERVER')"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="SERVER_NAME"
      SHOW_IF="(RUNNING_MODE=='HSQLDB_SERVER' or RUNNING_MODE=='HSQLDB_WEBSERVER')"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="PORT"
      SHOW_IF="(RUNNING_MODE=='HSQLDB_SERVER' or RUNNING_MODE=='HSQLDB_WEBSERVER')"
    >
      <DEFAULT>"9001"</DEFAULT>
    </PARAMETER>

	<PARAMETER
      NAME="TYPE"
      FIELD="TEXT"
      NUM_ROW="3"
      SHOW="false"
      REPOSITORY_VALUE="TYPE"
    >
      <DEFAULT>HSQLDB</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DBPATH"
      FIELD="DIRECTORY"
      NUM_ROW="4"
      REPOSITORY_VALUE="DBPATH"
      SHOW_IF="RUNNING_MODE=='HSQLDB_INPROGRESS_PERSISTENT'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DBNAME"
      FIELD="TEXT"
      NUM_ROW="4"
 	  REPOSITORY_VALUE="SID"
      SHOW_IF="(RUNNING_MODE=='HSQLDB_INPROGRESS_PERSISTENT') or (RUNNING_MODE=='HSQLDB_IN_MEMORY')"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DATABASE_ALIAS"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="DATABASE_ALIAS"
      NOT_SHOW_IF="(RUNNING_MODE=='HSQLDB_INPROGRESS_PERSISTENT') or (RUNNING_MODE=='HSQLDB_IN_MEMORY')"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="5"
      REPOSITORY_VALUE="USERNAME"
      REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PASS"
      FIELD="PASSWORD"
      NUM_ROW="5"
      REPOSITORY_VALUE="PASSWORD"
      REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="6"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TABLE"
      FIELD="DBTABLE"
      NUM_ROW="7"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="QUERYSTORE"
      FIELD="QUERYSTORE_TYPE"
      NUM_ROW="8"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

 	<PARAMETER
      NAME="GUESS_SCHEMA"
      FIELD="GUESS_SCHEMA"
      NUM_ROW="8"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="QUERY"
      FIELD="MEMO_SQL"
      NUM_ROW="9"
      REQUIRED="true"
    >
      <DEFAULT>"select * from sysobjects "</DEFAULT>
    </PARAMETER>

   </PARAMETERS>

   <ADVANCED_PARAMETERS>
   	<PARAMETER
		NAME="PROPERTIES"
		FIELD="TEXT"
		NUM_ROW="10"
		REPOSITORY_VALUE="PROPERTIES_STRING" >
		<DEFAULT IF="(RUNNING_MODE == 'HSQLDB_INPROGRESS_PERSISTENT')">"ifexists=true"</DEFAULT>
		<DEFAULT IF="(RUNNING_MODE != 'HSQLDB_INPROGRESS_PERSISTENT')">""</DEFAULT>
	</PARAMETER>

	<PARAMETER NAME="TRIM_ALL_COLUMN" FIELD="CHECK" NUM_ROW="30">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>

	<PARAMETER NAME="TRIM_COLUMN" FIELD="TABLE" NUM_ROW="40"
		NB_LINES="5" SHOW_IF="TRIM_ALL_COLUMN == 'false'">
		<ITEMS BASED_ON_SCHEMA="true">
			<ITEM NAME="TRIM" FIELD="CHECK"></ITEM>
		</ITEMS>
	</PARAMETER>
   </ADVANCED_PARAMETERS>
   <CODEGENERATION>
     <IMPORTS>
		<IMPORT NAME="Driver-HSQLDb" MODULE="hsqldb.jar" MVN="mvn:org.talend.libraries/hsqldb/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.jdbc.hsql/lib/hsqldb.jar" REQUIRED="true"/>
     </IMPORTS>
   </CODEGENERATION>

   <RETURNS>
      <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
      <RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW"/>
   </RETURNS>
</COMPONENT>
