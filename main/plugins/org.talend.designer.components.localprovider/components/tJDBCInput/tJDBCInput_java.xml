<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20070806A"
    STARTABLE="true"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Databases/DB_JDBC</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="1"
      REPOSITORY_VALUE="DATABASE:JDBC"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    />
    
    <PARAMETER
      NAME="USE_EXISTING_CONNECTION"
      FIELD="CHECK"
      NUM_ROW="10"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>    

    <PARAMETER
      NAME="CONNECTION"
      FIELD="COMPONENT_LIST"
      REQUIRED="true" FILTER="tJDBCConnection"
      NUM_ROW="10"
      SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
      DYNAMIC_SETTINGS="true"
    />
	
    <PARAMETER
      NAME="URL"
      FIELD="TEXT"
      NUM_ROW="15"
      REPOSITORY_VALUE="URL"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>"jdbc:"</DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="DRIVER_JAR"
      FIELD="TABLE"
      NUM_ROW="20"
      NB_LINES="2" 
      REPOSITORY_VALUE="DRIVER_JAR"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      	<ITEMS> 
			<ITEM NAME="JAR_NAME" FIELD="MODULE_LIST"  /> 
		</ITEMS> 
    </PARAMETER>
	
    <PARAMETER
      NAME="DRIVER_CLASS"
      FIELD="TEXT"
      NUM_ROW="25"
      REPOSITORY_VALUE="DRIVER_CLASS"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="30"
      REPOSITORY_VALUE="USERNAME"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PASS"
      FIELD="PASSWORD"
      NUM_ROW="30"
      REPOSITORY_VALUE="PASSWORD"
      REQUIRED="true"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="35"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
	<PARAMETER
      NAME="TABLE"
      FIELD="DBTABLE"
      NUM_ROW="40"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
 	<PARAMETER
      NAME="QUERYSTORE"
      FIELD="QUERYSTORE_TYPE"
      NUM_ROW="45"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

 	<PARAMETER
      NAME="GUESS_SCHEMA"
      FIELD="GUESS_SCHEMA"
      NUM_ROW="45"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="QUERY"
      FIELD="MEMO_SQL"
      NUM_ROW="55"
      REQUIRED="true"
    >
      <DEFAULT>"select id, name from employee"</DEFAULT>
    </PARAMETER>
	<PARAMETER
	  NAME="NOTE"
      FIELD="LABEL"
      NUM_ROW="63"
	  GROUP="DATASOURCE"
	  SHOW_IF="USE_EXISTING_CONNECTION=='false'"
    >
    	<DEFAULT>This option only applies when deploying and running in the Talend Runtime</DEFAULT>
    </PARAMETER>
	<PARAMETER
      NAME="SPECIFY_DATASOURCE_ALIAS"
	  FIELD="CHECK"
      NUM_ROW="64"
      REQUIRED="true"
	  GROUP="DATASOURCE"
	  SHOW_IF="USE_EXISTING_CONNECTION=='false'"
    >      
    </PARAMETER>
	<PARAMETER
      NAME="DATASOURCE_ALIAS"
	  FIELD="TEXT"
      NUM_ROW="65"
      REQUIRED="true"
	  GROUP="DATASOURCE"
	  SHOW_IF="(SPECIFY_DATASOURCE_ALIAS=='true' AND USE_EXISTING_CONNECTION=='false')"
    >      
	<DEFAULT>""</DEFAULT>
    </PARAMETER>
		
   </PARAMETERS>

   <ADVANCED_PARAMETERS>
	<PARAMETER
      	NAME="ENCODING"
      	FIELD="ENCODING_TYPE"
      	NUM_ROW="10"
      	REQUIRED="true"
      	SHOW="false"
    >
      	<DEFAULT>"ISO-8859-15"</DEFAULT>
	</PARAMETER>
	
	<PARAMETER NAME="USE_CURSOR" FIELD="CHECK" NUM_ROW="20">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>
	<PARAMETER NAME="CURSOR_SIZE" FIELD="TEXT" NUM_ROW="20"
			SHOW_IF="(USE_CURSOR == 'true')">
			<DEFAULT>1000</DEFAULT>
	</PARAMETER>

	
	<PARAMETER NAME="TRIM_ALL_COLUMN" FIELD="CHECK" NUM_ROW="30">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>
	
	<PARAMETER NAME="TRIM_COLUMN" FIELD="TABLE" NUM_ROW="40"
		NB_LINES="5" SHOW_IF="TRIM_ALL_COLUMN == 'false'">
		<ITEMS BASED_ON_SCHEMA="true">
			<ITEM NAME="TRIM" FIELD="CHECK"></ITEM>
		</ITEMS>
	</PARAMETER>		

	<PARAMETER NAME="ENABLE_MAPPING" FIELD="CHECK" NUM_ROW="110">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>

	<PARAMETER
      NAME="MAPPING"
      FIELD="CLOSED_LIST"
      NUM_ROW="120"
      SHOW_IF="ENABLE_MAPPING=='true'"
    >
		<ITEMS DEFAULT="MYSQL">
			<ITEM NAME="AS400" VALUE="as400_id" />
			<ITEM NAME="ACCESS" VALUE="access_id" />
			<ITEM NAME="DB2" VALUE="ibmdb2_id" />
			<ITEM NAME="FIREBIRD" VALUE="firebird_id" />
			<ITEM NAME="HSQLDB" VALUE="hsqldb_id" />
			<ITEM NAME="INFORMIX" VALUE="informix_id" />
			<ITEM NAME="INGRES" VALUE="ingres_id" />
			<ITEM NAME="VECTORWISE" VALUE="vectorwise_id" />
			<ITEM NAME="INTERBASE" VALUE="interbase_id" />
			<ITEM NAME="JAVADB" VALUE="javadb_id" />
			<ITEM NAME="MAXDB" VALUE="maxdb_id" />
			<ITEM NAME="MSSQL" VALUE="id_MSSQL" />
			<ITEM NAME="MYSQL" VALUE="mysql_id" />
			<ITEM NAME="NETEZZA" VALUE="netezza_id" />
			<ITEM NAME="ORACLE" VALUE="oracle_id" />
			<ITEM NAME="POSTGRESQL" VALUE="postgres_id" />
			<ITEM NAME="POSTGREPLUS" VALUE="postgresplus_id" />
			<ITEM NAME="SQLITE" VALUE="sqlite_id" />
			<ITEM NAME="SYBASE" VALUE="sybase_id" />
			<ITEM NAME="SAPHANA" VALUE="saphana_id" />
			<ITEM NAME="TERADATA" VALUE="teradata_id" />
			<ITEM NAME="VERTICA" VALUE="vertica_id" />
			<ITEM NAME="H2" VALUE="h2_id" />
			<ITEM NAME="ODBC" VALUE="MSODBC" />
		</ITEMS>
    </PARAMETER>
   </ADVANCED_PARAMETERS>

   <CODEGENERATION>
   </CODEGENERATION>

   <RETURNS>
      <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
      <RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW"/>
   </RETURNS>
</COMPONENT>
